            <div class="container">
        <h1>Tela de Edição</h1>
        <form action="/atualizar" method="POST">
            <input type="hidden" name="id" class="form-control" id="nome" value="{{id}}">
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="name" name="nome" class="form-control" id="nome" value="{{nome}}">
            </div>
            <div class="form-group">
                <label for="endereco">Endereço:</label>
                <input type="name" name="endereco" class="form-control" id="endereco" value="{{endereco}}">
            </div>
            <div class="form-group">
                <label for="bairro">Bairro:</label>
                <input type="name" name="bairro" class="form-control" id="bairro" value="{{bairro}}">
            </div>
            <div class="form-group">
                <label for="cep">CEP:</label>
                <input type="name" name="cep" class="form-control" id="cep" value="{{cep}}">
            </div>
            <div class="form-group">
                <label for="cidade">Cidade:</label>
                <input type="name" name="cidade" class="form-control" id="cidade" value="{{cidade}}">
            </div>
            <div class="form-group">
                <label for="estado">Estado:</label>
                <input type="name" name="estado" class="form-control" id="estado" value="{{estado}}">
            </div>
            <button type="submit" class="btn btn-primary">Atualizar</button>
        </form>
</div>
                {{/dataValues}}
            {{/each}}

